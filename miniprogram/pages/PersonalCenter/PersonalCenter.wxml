<view class="container">

  <view class="userinfo">



    <button 
      open-type="getUserInfo" 
      bindgetuserinfo="onGetUserInfo"
      class="userinfo-avatar"
      style="background-image: url({{avatarUrl}})"
      size="default"
    ></button>
    <view class="userinfo-nickname-wrapper">

      <button class="userinfo-nickname" bindtap="hide">欢迎回来！{{realname}}</button>
    </view>
  </view>

  <view class="uploader" wx:if="{{person}}">
    <view class="uploader-text" bindtap="doUpload">
      <text>个人简历</text>
    </view>
  </view>

  <view class="uploader">
    <view class="uploader-text" bindtap="doUpload">
      <text>项目大厅</text>
    </view>
  </view>
  <view class="uploader">
    <view class="uploader-text" bindtap="doUpload">
      <text>我的项目</text>
    </view>
  </view>
</view>
