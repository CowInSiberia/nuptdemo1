


<view>
  <view class="cu-timeline">
    <view class="cu-time ">项目信息</view>
    <view class="cu-item text-red">
      <view class = "content bg-black shadow-blur">
        <view class="cu-capsule radius">
          <view class="cu-tag bg-red shadow">项目名称</view>
        </view>
        <view class="margin-top text-white">
          {{ProjectName}}
        </view>
      </view>
    </view>
    <view class="cu-item text-red">
      <view class = "content bg-black shadow-blur">
        <view class="cu-capsule radius">
          <view class="cu-tag bg-red shadow">项目方向</view>
        </view>
        <view class="margin-top text-white">
          {{Direction}}
        </view>
      </view>
    </view>
    <view class="cu-item text-red">
      <view class = "content bg-black shadow-blur">
        <view class="cu-capsule radius">
          <view class="cu-tag bg-red shadow">能力需求</view>
        </view>
        <view class="margin-top text-white">
          {{Ability}}
        </view>
      </view>
    </view>
    <view class="cu-item text-red">
      <view class = "content bg-black shadow-blur">
        <view class="cu-capsule radius">
          <view class="cu-tag bg-red shadow">项目介绍</view>
        </view>
        <view class="margin-top text-white">
          {{Introduction}}
        </view>
      </view>
    </view>
    <view class="cu-item text-red">
      <view class = "content bg-black shadow-blur">
        <view class="cu-capsule radius">
          <view class="cu-tag bg-red shadow">导师/课题组</view>
        </view>
        <view class="margin-top text-white">
          {{ProfessorName}}
        </view>
      </view>
    </view>
    <view class="cu-item text-red">
      <view class = "content bg-black shadow-blur">
        <view class="cu-capsule radius">
          <view class="cu-tag bg-red shadow">学院</view>
        </view>
        <view class="margin-top text-white">
          {{College}}
        </view>
      </view>
    </view>
    <view class="cu-item text-red">
      <view class = "content bg-black shadow-blur">
        <view class="cu-capsule radius">
          <view class="cu-tag bg-red shadow">联系方式</view>
        </view>
        <view class="margin-top text-white">
          {{Email}}
        </view>
      </view>
    </view>
  </view>
  
  <button class='button1'  bindtap="downloadAppendix" >
    <image class = "icon2" src="../../images/icon_appendix.png"></image>
    <text class="button1-text">查看附件</text>
  </button>
  <button class='button2'  bindtap="Apply" data-target="DialogModal1">
    <image class = "icon2" src="../../images/icon_apply.png"></image>
    <text class="button1-text">申请加入</text>
  </button>

  <view class="cu-modal {{modalName=='DialogModal1'?'show':''}}">
    <view class="cu-dialog">
      <view class="cu-bar bg-white justify-end">
        <view class="content">通知</view>
        <view class="action" bindtap="hideModal">
          <text class="cuIcon-close text-red"></text>
        </view>
      </view>
      <view class="padding-xl">
        申请已提交，请等待导师回复。
      </view>
      <view class="cu-bar bg-white justify-center">
        <view class="action margin-0 flex-sub text-black solid-left" bindtap="hideModal">确定</view>
      </view>
    </view>
  </view>
  
</view>

